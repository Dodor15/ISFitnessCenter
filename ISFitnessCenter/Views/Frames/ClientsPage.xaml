<Page x:Class="ISFitnessCenter.Views.Frames.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ISFitnessCenter.Views.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsPage">

    <StackPanel>
        <ScrollViewer>
            <ListView Height="450px" x:Name="ClientsList">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Номер Аб." Width="160"/>
                        <GridViewColumn Header="ФИО" Width="450"/>
                        <GridViewColumn Header="Номер" Width="280"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <Button Margin="10" Content="Добавить" x:Name="add" Click="add_Click"/>
            <Button Margin="10"  Content="Изменить" x:Name="edit" Click="edit_Click"/>
        <Button Margin="10"  Content="Тренеры" x:Name="treners" Click="treners_Click"/>
    </StackPanel>
</Page>
